# TSOAM Church Management System - Environment Configuration
# Copy this file to .env and update the values for your installation

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# ============================================
# MYSQL DATABASE CONFIGURATION
# ============================================
# Update these settings to match your MySQL server configuration

DB_HOST=localhost
DB_PORT=3306
DB_USER=church_admin
DB_PASSWORD=tsoam2025!
DB_NAME=tsoam_church

# ============================================
# SECURITY CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-here-change-this
SESSION_SECRET=your-session-secret-here-change-this

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@tsoam.com
SMTP_PASS=your-email-password
SMTP_FROM=TSOAM Church <admin@tsoam.com>

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_PATH=./backups
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30

# ============================================
# CHURCH CONFIGURATION
# ============================================
CHURCH_NAME=TSOAM CHURCH INTERNATIONAL
CHURCH_EMAIL_DOMAIN=tsoam.com
TIMEZONE=Africa/Nairobi
DEFAULT_CURRENCY=KSH

# ============================================
# DEVELOPMENT OPTIONS
# ============================================
# Set to true only for development/testing
INCLUDE_DEMO_DATA=false
DEBUG_MODE=false
